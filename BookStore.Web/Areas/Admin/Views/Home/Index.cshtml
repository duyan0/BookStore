
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="container">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body bg-success">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-book fa-2x text-white"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0 text-white">@(ViewBag.BookStats?.TotalBooks ?? 0) Sách</h5>
                            <p class="text-white mb-0">@(ViewBag.BookStats?.BooksInStock ?? 0) còn hàng</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light-custom d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link text-decoration-none" asp-area="Admin" asp-controller="Books" asp-action="Index">Xem chi tiết</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card warning mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-list fa-2x text-warning"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Danh mục</h5>
                            <p class="text-black mb-0">Quản lý danh mục</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light-custom d-flex align-items-center justify-content-between">
                    <a class="small text-black stretched-link text-decoration-none" asp-area="Admin" asp-controller="Categories" asp-action="Index">Xem chi tiết</a>
                    <div class="small text-black"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card success mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-user-edit fa-2x text-success"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Tác giả</h5>
                            <p class="text-muted mb-0">Quản lý tác giả</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light-custom d-flex align-items-center justify-content-between">
                    <a class="small text-black stretched-link text-decoration-none" asp-area="Admin" asp-controller="Authors" asp-action="Index">Xem chi tiết</a>
                    <div class="small text-black"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card danger mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-shopping-cart fa-2x text-danger"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">@(ViewBag.OrderStats?.TotalOrders ?? 0) Đơn hàng</h5>
                            <p class="text-muted mb-0">@(ViewBag.OrderStats?.PendingOrders ?? 0) chờ xử lý</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light-custom d-flex align-items-center justify-content-between">
                    <a class="small text-black stretched-link text-decoration-none" asp-area="Admin" asp-controller="Orders" asp-action="Index">Xem chi tiết</a>
                    <div class="small text-black"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- User Management Statistics Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card h-auto bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white small">Tổng người dùng</div>
                            <div class="text-lg fw-bold">@(ViewBag.UserStats?.TotalUsers ?? 0)</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-secondary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Admin</div>
                            <div class="text-lg fw-bold">@(ViewBag.UserStats?.AdminUsers ?? 0)</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-user-shield"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Users" asp-action="Statistics">Xem thống kê</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Mới tháng này</div>
                            <div class="text-lg fw-bold">@(ViewBag.UserStats?.NewUsersThisMonth ?? 0)</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-user-plus"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small text-white">Người dùng mới</span>
                    <div class="small text-white"><i class="fas fa-chart-line"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Hoạt động hôm nay</div>
                            <div class="text-lg fw-bold">@(ViewBag.UserStats?.ActiveUsersToday ?? 0)</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-user-clock"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small text-white">Người dùng hoạt động</span>
                    <div class="small text-white"><i class="fas fa-pulse"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Book Management Statistics Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Tổng sách</div>
                            <div class="text-lg fw-bold">@(ViewBag.BookStats?.TotalBooks ?? 0)</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-book"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Books" asp-action="Index">Quản lý sách</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Còn hàng</div>
                            <div class="text-lg fw-bold">@(ViewBag.BookStats?.BooksInStock ?? 0)</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small text-white">Sách có sẵn</span>
                    <div class="small text-white"><i class="fas fa-inventory"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Hết hàng</div>
                            <div class="text-lg fw-bold">@(ViewBag.BookStats?.BooksOutOfStock ?? 0)</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small text-white">Cần nhập thêm</span>
                    <div class="small text-white"><i class="fas fa-warning"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Sắp hết</div>
                            <div class="text-lg fw-bold">@(ViewBag.BookStats?.LowStockBooks ?? 0)</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-battery-quarter"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small text-white">Dưới 10 cuốn</span>
                    <div class="small text-white"><i class="fas fa-chart-line"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Management Statistics Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Đơn hoàn thành</div>
                            <div class="text-lg fw-bold">@(ViewBag.OrderStats?.CompletedOrders ?? 0)</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small text-white">Đã giao thành công</span>
                    <div class="small text-white"><i class="fas fa-truck"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Đang xử lý</div>
                            <div class="text-lg fw-bold">@(ViewBag.OrderStats?.ProcessingOrders ?? 0)</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-clock"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small text-white">Đang chuẩn bị</span>
                    <div class="small text-white"><i class="fas fa-cogs"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Doanh thu tháng</div>
                            <div class="text-lg fw-bold">@((ViewBag.OrderStats?.MonthlyRevenue ?? 0).ToString("N0"))đ</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-chart-line"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small text-white">Tháng này</span>
                    <div class="small text-white"><i class="fas fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Tổng doanh thu</div>
                            <div class="text-lg fw-bold">@((ViewBag.OrderStats?.TotalRevenue ?? 0).ToString("N0"))đ</div>
                        </div>
                        <div class="fa-2x opacity-25">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <span class="small text-white">Tất cả thời gian</span>
                    <div class="small text-white"><i class="fas fa-infinity"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area me-1"></i>
                    Biểu đồ doanh thu
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Biểu đồ đơn hàng
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="myBarChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Đơn hàng mới nhất
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.RecentOrders != null && ((List<BookStore.Core.DTOs.OrderDto>)ViewBag.RecentOrders).Any())
                    {
                        @foreach (var order in (List<BookStore.Core.DTOs.OrderDto>)ViewBag.RecentOrders)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.UserFullName</td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                <td>@order.TotalAmount.ToString("N0")đ</td>
                                <td>
                                    @switch (order.Status)
                                    {
                                        case "Pending":
                                            <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                            break;
                                        case "Processing":
                                            <span class="badge bg-info">Đang xử lý</span>
                                            break;
                                        case "Completed":
                                            <span class="badge bg-success">Đã hoàn thành</span>
                                            break;
                                        case "Cancelled":
                                            <span class="badge bg-danger">Đã hủy</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@order.Status</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-info" asp-area="Admin" asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-2"></i>
                                <br>
                                Chưa có đơn hàng nào
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
    <script>
        // Biểu đồ doanh thu với dữ liệu thực
        var ctx = document.getElementById("myAreaChart");
        var orderStats = @Html.Raw(Json.Serialize(ViewBag.OrderStats ?? new {}));

        // Prepare chart data from real statistics
        var monthlyData = orderStats.monthlyRevenueChart || [];
        var labels = monthlyData.map(item => item.monthName || 'N/A');
        var revenueData = monthlyData.map(item => item.revenue || 0);
        var maxRevenue = Math.max(...revenueData, 10000);

        var myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels.length > 0 ? labels : ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6"],
                datasets: [{
                    label: "Doanh thu (VNĐ)",
                    lineTension: 0.3,
                    backgroundColor: "rgba(0,0,0,0.1)",
                    borderColor: "rgba(0,0,0,0.8)",
                    pointRadius: 5,
                    pointBackgroundColor: "rgba(0,0,0,1)",
                    pointBorderColor: "rgba(255,255,255,0.8)",
                    pointHoverRadius: 7,
                    pointHoverBackgroundColor: "rgba(0,0,0,1)",
                    pointHitRadius: 50,
                    pointBorderWidth: 2,
                    data: revenueData.length > 0 ? revenueData : [10000, 30000, 26000, 18000, 28000, 26000],
                }],
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    xAxes: [{
                        gridLines: {
                            display: false
                        },
                        ticks: {
                            maxTicksLimit: 6
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            min: 0,
                            max: Math.ceil(maxRevenue * 1.2),
                            maxTicksLimit: 5,
                            callback: function(value) {
                                return value.toLocaleString('vi-VN') + 'đ';
                            }
                        },
                        gridLines: {
                            color: "rgba(0, 0, 0, .125)",
                        }
                    }],
                },
                legend: {
                    display: false
                },
                tooltips: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return 'Doanh thu: ' + tooltipItem.yLabel.toLocaleString('vi-VN') + 'đ';
                        }
                    }
                }
            }
        });

        // Biểu đồ đơn hàng với dữ liệu thực
        var ctx2 = document.getElementById("myBarChart");
        var orderData = monthlyData.map(item => item.orderCount || 0);
        var maxOrders = Math.max(...orderData, 10);

        var myBarChart = new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: labels.length > 0 ? labels : ["Tháng 1", "Tháng 2", "Tháng 3", "Tháng 4", "Tháng 5", "Tháng 6"],
                datasets: [{
                    label: "Số đơn hàng",
                    backgroundColor: "rgba(220, 53, 69, 0.8)",
                    borderColor: "rgba(220, 53, 69, 1)",
                    borderWidth: 1,
                    data: orderData.length > 0 ? orderData : [20, 30, 25, 18, 28, 26],
                }],
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    xAxes: [{
                        gridLines: {
                            display: false
                        },
                        ticks: {
                            maxTicksLimit: 6
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            min: 0,
                            max: Math.ceil(maxOrders * 1.2),
                            maxTicksLimit: 5,
                            stepSize: 1
                        },
                        gridLines: {
                            display: true,
                            color: "rgba(0, 0, 0, .125)"
                        }
                    }],
                },
                legend: {
                    display: false
                },
                tooltips: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return 'Đơn hàng: ' + tooltipItem.yLabel + ' đơn';
                        }
                    }
                }
            }
        });
    </script>
} 
