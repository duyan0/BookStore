@model SliderDto
@{
    ViewData["Title"] = "Xóa Slider";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-trash me-2 text-danger"></i>Xóa Slider
                </h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <div class="alert alert-warning" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa slider này? Hành động này không thể hoàn tác.
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-image me-2"></i>Hình ảnh Slider
                    </h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" style="max-height: 300px; width: 100%; object-fit: cover;">
                        @if (!string.IsNullOrEmpty(Model.LinkUrl))
                        {
                            <div class="mt-3">
                                <span class="btn btn-@Model.ButtonStyle disabled">
                                    @(!string.IsNullOrEmpty(Model.ButtonText) ? Model.ButtonText : "Xem thêm")
                                </span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 200px;">
                            <i class="fas fa-image fa-5x text-muted"></i>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin Slider
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>ID:</strong></div>
                        <div class="col-sm-8">@Model.Id</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Tiêu đề:</strong></div>
                        <div class="col-sm-8">@Model.Title</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4"><strong>Mô tả:</strong></div>
                            <div class="col-sm-8">@Model.Description</div>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Thứ tự:</strong></div>
                        <div class="col-sm-8">
                            <span class="badge bg-secondary">@Model.DisplayOrder</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Trạng thái:</strong></div>
                        <div class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Tạm dừng</span>
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Ngày tạo:</strong></div>
                        <div class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4"><strong>Cập nhật:</strong></div>
                            <div class="col-sm-8">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow mt-3">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2 text-danger"></i>Xác nhận xóa
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">
                        Slider này sẽ bị xóa vĩnh viễn khỏi hệ thống. Hành động này không thể hoàn tác.
                    </p>
                    
                    <form asp-action="Delete" method="post">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa slider này?')">
                                <i class="fas fa-trash me-2"></i>Xác nhận xóa
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-eye me-2"></i>Xem chi tiết
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Hủy bỏ
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add confirmation dialog for extra safety
        document.querySelector('form').addEventListener('submit', function(e) {
            if (!confirm('Bạn có THỰC SỰ chắc chắn muốn xóa slider "' + '@Model.Title' + '"?\n\nHành động này không thể hoàn tác!')) {
                e.preventDefault();
            }
        });
    </script>
}
