@model List<SliderDto>
@{
    ViewData["Title"] = "Quản lý Slider";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-images me-2 text-primary"></i>Quản lý Slider
                </h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus me-1"></i>Thêm Slider
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>Danh sách Slider (@Model.Count)
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Hình ảnh</th>
                                <th>Tiêu đề</th>
                                <th>Mô tả</th>
                                <th>Thứ tự</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var slider in Model.OrderBy(s => s.DisplayOrder))
                            {
                                <tr>
                                    <td>
                                        <img src="@slider.ImageUrl" alt="@slider.Title" 
                                             class="img-thumbnail" style="width: 80px; height: 50px; object-fit: cover;">
                                    </td>
                                    <td>
                                        <strong>@slider.Title</strong>
                                        @if (!string.IsNullOrEmpty(slider.LinkUrl))
                                        {
                                            <br><small class="text-muted">
                                                <i class="fas fa-link me-1"></i>@slider.LinkUrl
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(slider.Description))
                                        {
                                            <span class="text-muted">@(slider.Description.Length > 50 ? slider.Description.Substring(0, 50) + "..." : slider.Description)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@slider.DisplayOrder</span>
                                    </td>
                                    <td>
                                        @if (slider.IsActive)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Tạm dừng</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@slider.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@slider.Id" 
                                               class="btn btn-outline-info btn-sm" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@slider.Id" 
                                               class="btn btn-outline-warning btn-sm" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-@(slider.IsActive ? "danger" : "success") btn-sm" 
                                                    onclick="toggleActive(@slider.Id)" title="@(slider.IsActive ? "Tạm dừng" : "Kích hoạt")">
                                                <i class="fas fa-@(slider.IsActive ? "pause" : "play")"></i>
                                            </button>
                                            <a asp-action="Delete" asp-route-id="@slider.Id" 
                                               class="btn btn-outline-danger btn-sm" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-images fa-5x text-muted mb-4"></i>
            <h4 class="text-muted">Chưa có slider nào</h4>
            <p class="text-muted">Hãy tạo slider đầu tiên để hiển thị trên trang chủ</p>
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="fas fa-plus me-2"></i>Tạo Slider đầu tiên
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        async function toggleActive(sliderId) {
            try {
                const response = await fetch(`/Admin/Sliders/ToggleActive/${sliderId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });
                
                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message || 'Có lỗi xảy ra');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi cập nhật trạng thái');
            }
        }
    </script>
}
