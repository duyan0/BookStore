@model AuthorViewModel
@{
    ViewData["Title"] = "Chi tiết Tác giả";
}

<div class="container px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Authors" asp-action="Index">Tác giả</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-user me-1"></i>
                    Hình ảnh
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.FullName" class="img-fluid rounded-circle shadow" style="max-height: 300px; max-width: 300px;">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center rounded-circle mx-auto" style="height: 200px; width: 200px;">
                            <i class="fas fa-user fa-5x text-muted"></i>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-info-circle me-1"></i>
                    Thông tin Tác giả
                    <div class="float-end">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>
                        <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(@Model.Id, '@Html.Raw(Model.FullName)')">
                            <i class="fas fa-trash"></i> Xóa
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Tên:</dt>
                                <dd class="col-sm-8"><strong>@Model.FirstName</strong></dd>

                                <dt class="col-sm-4">Họ:</dt>
                                <dd class="col-sm-8"><strong>@Model.LastName</strong></dd>

                                <dt class="col-sm-4">Tên đầy đủ:</dt>
                                <dd class="col-sm-8"><strong class="text-primary">@Model.FullName</strong></dd>

                                <dt class="col-sm-4">Số sách:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info fs-6">@Model.BookCount sách</span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Ngày sinh:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.BirthDate.HasValue)
                                    {
                                        @Model.BirthDate.Value.ToString("dd/MM/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Ngày tạo:</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Cập nhật:</dt>
                                <dd class="col-sm-8">@(Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa cập nhật")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Biography))
                    {
                        <hr>
                        <h6><i class="fas fa-book-open me-1"></i> Tiểu sử:</h6>
                        <div class="bg-light p-3 rounded">
                            @Html.Raw(Model.Biography.Replace("\n", "<br>"))
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa tác giả <strong id="authorName"></strong>?</p>
                <p class="text-danger"><i class="fas fa-exclamation-triangle"></i> Hành động này không thể hoàn tác!</p>
                <p class="text-warning"><i class="fas fa-info-circle"></i> Lưu ý: Nếu tác giả có sách, bạn cần xóa hoặc chuyển sách sang tác giả khác trước.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(authorId, authorName) {
            document.getElementById('authorName').textContent = authorName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Authors", new { area = "Admin" })/' + authorId;
            
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}
