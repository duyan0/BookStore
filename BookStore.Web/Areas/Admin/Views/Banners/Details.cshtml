@model BannerDto
@{
    ViewData["Title"] = "Chi tiết Banner";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-info-circle me-2 text-info"></i>Chi tiết Banner
                </h2>
                <div>
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>Chỉnh sửa
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-image me-2"></i>Hình ảnh Banner
                    </h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" style="max-height: 400px; width: 100%; object-fit: cover;">
                        @if (!string.IsNullOrEmpty(Model.LinkUrl))
                        {
                            <div class="mt-3">
                                <a href="@Model.LinkUrl" target="_blank" class="btn btn-@Model.ButtonStyle">
                                    @(!string.IsNullOrEmpty(Model.ButtonText) ? Model.ButtonText : "Xem thêm")
                                    <i class="fas fa-external-link-alt ms-1"></i>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 300px;">
                            <i class="fas fa-ad fa-5x text-muted"></i>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin chi tiết
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>ID:</strong></div>
                        <div class="col-sm-8">@Model.Id</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Tiêu đề:</strong></div>
                        <div class="col-sm-8">@Model.Title</div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4"><strong>Mô tả:</strong></div>
                            <div class="col-sm-8">@Model.Description</div>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Vị trí:</strong></div>
                        <div class="col-sm-8">
                            <span class="badge bg-info">@Model.Position</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Kích thước:</strong></div>
                        <div class="col-sm-8">
                            <span class="badge bg-secondary">@Model.Size</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Thứ tự:</strong></div>
                        <div class="col-sm-8">
                            <span class="badge bg-dark">@Model.DisplayOrder</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Trạng thái:</strong></div>
                        <div class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Tạm dừng</span>
                            }
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.LinkUrl))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4"><strong>Liên kết:</strong></div>
                            <div class="col-sm-8">
                                <a href="@Model.LinkUrl" target="_blank" class="text-decoration-none">
                                    @Model.LinkUrl <i class="fas fa-external-link-alt ms-1"></i>
                                </a>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ButtonText))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-4"><strong>Text nút:</strong></div>
                            <div class="col-sm-8">@Model.ButtonText</div>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Kiểu nút:</strong></div>
                        <div class="col-sm-8">
                            <span class="badge bg-@Model.ButtonStyle">@Model.ButtonStyle</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mt-3">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar me-2"></i>Lịch trình
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.StartDate.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-5"><strong>Bắt đầu:</strong></div>
                            <div class="col-sm-7">@Model.StartDate.Value.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    }
                    else
                    {
                        <div class="row mb-3">
                            <div class="col-sm-5"><strong>Bắt đầu:</strong></div>
                            <div class="col-sm-7"><span class="text-muted">Không giới hạn</span></div>
                        </div>
                    }

                    @if (Model.EndDate.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-5"><strong>Kết thúc:</strong></div>
                            <div class="col-sm-7">@Model.EndDate.Value.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    }
                    else
                    {
                        <div class="row mb-3">
                            <div class="col-sm-5"><strong>Kết thúc:</strong></div>
                            <div class="col-sm-7"><span class="text-muted">Không giới hạn</span></div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-5"><strong>Ngày tạo:</strong></div>
                        <div class="col-sm-7">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-5"><strong>Cập nhật:</strong></div>
                            <div class="col-sm-7">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow mt-3">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cogs me-2"></i>Hành động
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Chỉnh sửa
                        </a>
                        <button type="button" class="btn btn-@(Model.IsActive ? "danger" : "success")" 
                                onclick="toggleActive(@Model.Id)">
                            <i class="fas fa-@(Model.IsActive ? "pause" : "play") me-2"></i>
                            @(Model.IsActive ? "Tạm dừng" : "Kích hoạt")
                        </button>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="fas fa-trash me-2"></i>Xóa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function toggleActive(bannerId) {
            try {
                const response = await fetch(`/Admin/Banners/ToggleActive/${bannerId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });
                
                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message || 'Có lỗi xảy ra');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi cập nhật trạng thái');
            }
        }
    </script>
}
