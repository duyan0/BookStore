<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="user-logged-in" content="@(Context.Session.GetInt32("UserId") != null ? "true" : "false")" />
    <!-- Anti-forgery token will be handled by forms -->
    <title>@ViewData["Title"] - BookStore</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStore.Web.styles.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book me-2"></i>BookStore
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Shop" asp-action="Index">
                                <i class="fas fa-store me-1"></i>Cửa hàng
                            </a>
                        </li>
                        @* User menu items for non-admin users only *@
                        @if (Context.Session.GetString("Token") != null && Context.Session.GetString("IsAdmin") != "True")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt me-1"></i>Trang cá nhân
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-area="" asp-controller="Shop" asp-action="Cart">
                                    <i class="fas fa-shopping-cart me-1"></i>Giỏ hàng
                                    <span class="cart-counter badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle" style="display: none; font-size: 0.7rem;">0</span>
                                </a>
                            </li>
                        }
                        @* Admin users get a link to admin panel *@
                        @if (Context.Session.GetString("IsAdmin") == "True")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-cog me-1"></i>Quản trị hệ thống
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("Token") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>@Context.Session.GetString("FullName")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <h6 class="dropdown-header">
                                            <i class="fas fa-user me-1"></i>@Context.Session.GetString("Username")
                                        </h6>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user-circle me-1"></i>Thông tin tài khoản
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="LogoutPost" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger"
                                                    onclick="return confirm('Bạn có chắc chắn muốn đăng xuất?')">
                                                <i class="fas fa-sign-out-alt me-1"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Đăng ký
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="container">
        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>

    <footer class=" bg-white border-top">
        <div class="container">
            <div class="row py-4">
                <!-- Thông tin công ty -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <h5 class="fw-bold text-black mb-3">
                        <i class="fas fa-book me-2"></i>BookStore
                    </h5>
                    <p class="text-muted mb-3">
                        Cửa hàng sách trực tuyến hàng đầu Việt Nam với hàng ngàn đầu sách chất lượng cao từ các nhà xuất bản uy tín.
                    </p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-muted hover-primary">
                            <i class="fab fa-facebook-f fa-lg"></i>
                        </a>
                        <a href="#" class="text-muted hover-primary">
                            <i class="fab fa-twitter fa-lg"></i>
                        </a>
                        <a href="#" class="text-muted hover-primary">
                            <i class="fab fa-instagram fa-lg"></i>
                        </a>
                        <a href="#" class="text-muted hover-primary">
                            <i class="fab fa-youtube fa-lg"></i>
                        </a>
                    </div>
                </div>

                <!-- Liên kết nhanh -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h6 class="fw-bold text-black mb-3">Liên kết nhanh</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="@Url.Action("Index", "Home")" class="text-muted text-decoration-none hover-primary">
                                <i class="fas fa-home me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="@Url.Action("Index", "Shop")" class="text-muted text-decoration-none hover-primary">
                                <i class="fas fa-store me-1"></i>Cửa hàng
                            </a>
                        </li>
                        @if (Context.Session.GetString("Token") != null && Context.Session.GetString("IsAdmin") != "True")
                        {
                            <li class="mb-2">
                                <a href="@Url.Action("Dashboard", "User")" class="text-muted text-decoration-none hover-primary">
                                    <i class="fas fa-user me-1"></i>Tài khoản
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="@Url.Action("Cart", "Shop")" class="text-muted text-decoration-none hover-primary position-relative">
                                    <i class="fas fa-shopping-cart me-1"></i>Giỏ hàng
                                    <span class="cart-counter badge bg-danger rounded-pill position-absolute" style="display: none; font-size: 0.6rem; top: -5px; left: 15px;">0</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Danh mục sách -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="fw-bold text-black mb-3">Danh mục sách</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="#" class="text-muted text-decoration-none hover-primary">
                                <i class="fas fa-book me-1"></i>Văn học
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-muted text-decoration-none hover-primary">
                                <i class="fas fa-laptop-code me-1"></i>Công nghệ
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-muted text-decoration-none hover-primary">
                                <i class="fas fa-graduation-cap me-1"></i>Giáo dục
                            </a>
                        </li>
                        <li class="mb-2">
                            <a href="#" class="text-muted text-decoration-none hover-primary">
                                <i class="fas fa-heart me-1"></i>Sức khỏe
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Thông tin liên hệ -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h6 class="fw-bold text-black mb-3">Liên hệ</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2 text-muted">
                            <i class="fas fa-map-marker-alt me-2"></i>
                           95 Đ. Nguyễn Minh Hoàng, Phường 12, Tân Bình, Hồ Chí Minh, Việt Nam
                        </li>
                        <li class="mb-2 text-muted">
                            <i class="fas fa-phone me-2"></i>
                            <a href="tel:+84123456789" class="text-muted text-decoration-none">
                                +84 355079864
                            </a>
                        </li>
                        <li class="mb-2 text-muted">
                            <i class="fas fa-envelope me-2"></i>
                            <a href="mailto:info@bookstore.vn" class="text-muted text-decoration-none">
                                info@bookstore.vn
                            </a>
                        </li>
                        <li class="mb-2 text-muted">
                            <i class="fas fa-clock me-2"></i>
                            T2-CN: 8:00 - 22:00
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Copyright -->
            <div class="row border-top pt-3">
                <div class="col-md-6">
                    <p class="mb-0 text-muted">
                        &copy; 2025 BookStore. Tất cả quyền được bảo lưu.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        Thanh toán an toàn & Bảo mật thông tin
                    </small>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
