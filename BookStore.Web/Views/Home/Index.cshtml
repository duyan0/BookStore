@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container">
    <!-- Hero Section -->
    <div class="row section-spacing">
        <div class="col-12">
            <div class="hero-section rounded text-center">
                <h1 class="display-4 fw-bold text-black">
                    <i class="fas fa-book me-3"></i>
                    Chào mừng đến với BookStore
                </h1>
                <p class="lead text-secondary-custom">Khám phá thế giới tri thức với hàng ngàn đầu sách chất lượng</p>
                <hr class="my-4">
                <p class="text-muted-custom">Tìm kiếm và mua sách yêu thích của bạn một cách dễ dàng</p>
                @if (Context.Session.GetString("Token") != null)
                {
                    <div class="mb-0">
                        <p class="mb-2">
                            <i class="fas fa-user me-2"></i>
                            Xin chào, <strong>@Context.Session.GetString("FullName")</strong>!
                        </p>
                        @if (Context.Session.GetString("IsAdmin") == "True")
                        {
                            <p class="mb-0">
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-crown me-1"></i>Administrator
                                </span>
                                - Bạn có quyền truy cập đầy đủ hệ thống
                            </p>
                        }
                        else
                        {
                            <p class="mb-0">
                                <span class="badge bg-info">
                                    <i class="fas fa-user me-1"></i>User
                                </span>
                                - Liên hệ Admin để được cấp quyền truy cập
                            </p>
                        }
                    </div>
                }
                else
                {
                    <div class="mt-3">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-2">
                            <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-user-plus me-1"></i>Đăng ký
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row section-spacing">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-rocket me-2"></i>Khám phá ngay
            </h2>
        </div>
        <div class="col-lg-4 col-md-6 card-spacing">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center mx-auto mb-3"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-store fa-2x text-white"></i>
                    </div>
                    <h5 class="card-title">Cửa hàng sách</h5>
                    <p class="card-text">Khám phá hàng ngàn đầu sách từ nhiều thể loại khác nhau</p>
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary w-100">
                        <i class="fas fa-shopping-bag me-1"></i>Mua sắm ngay
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 card-spacing">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-success d-flex align-items-center justify-content-center mx-auto mb-3"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-search fa-2x text-white"></i>
                    </div>
                    <h5 class="card-title">Tìm kiếm sách</h5>
                    <p class="card-text">Tìm kiếm sách theo tên, tác giả hoặc thể loại yêu thích</p>
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-success w-100">
                        <i class="fas fa-search me-1"></i>Tìm kiếm
                    </a>
                </div>
            </div>
        </div>
        @if (Context.Session.GetString("Token") != null && Context.Session.GetString("IsAdmin") != "True")
        {
            <div class="col-lg-4 col-md-6 card-spacing">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <div class="rounded-circle bg-info d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-user fa-2x text-white"></i>
                        </div>
                        <h5 class="card-title">Tài khoản của tôi</h5>
                        <p class="card-text">Quản lý thông tin cá nhân và lịch sử mua hàng</p>
                        <a asp-controller="User" asp-action="Dashboard" class="btn btn-info w-100">
                            <i class="fas fa-tachometer-alt me-1"></i>Trang cá nhân
                        </a>
                    </div>
                </div>
            </div>
        }
        else if (Context.Session.GetString("Token") == null)
        {
            <div class="col-lg-4 col-md-6 card-spacing">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-user-plus fa-2x text-white"></i>
                        </div>
                        <h5 class="card-title">Tạo tài khoản</h5>
                        <p class="card-text">Đăng ký tài khoản để trải nghiệm đầy đủ tính năng</p>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-warning w-100">
                            <i class="fas fa-user-plus me-1"></i>Đăng ký ngay
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Features -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-star me-2"></i>Tính năng nổi bật
            </h2>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-search text-primary me-2"></i>Tìm kiếm thông minh
                    </h5>
                    <p class="card-text">Tìm kiếm sách theo tên, tác giả, ISBN hoặc thể loại một cách nhanh chóng và chính xác.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-mobile-alt text-success me-2"></i>Giao diện responsive
                    </h5>
                    <p class="card-text">Thiết kế thân thiện với mọi thiết bị, từ máy tính để bàn đến điện thoại di động.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-shield-alt text-warning me-2"></i>Bảo mật cao
                    </h5>
                    <p class="card-text">Hệ thống bảo mật đa lớp đảm bảo an toàn cho dữ liệu và thông tin người dùng.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-shipping-fast text-info me-2"></i>Giao hàng nhanh chóng
                    </h5>
                    <p class="card-text">Giao hàng toàn quốc với nhiều hình thức thanh toán tiện lợi và an toàn.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row">
        <div class="col-12">
            <div class="card bg-light border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <i class="fas fa-heart me-2"></i>Bắt đầu hành trình đọc sách
                    </h5>
                    <p class="card-text">Hãy khám phá bộ sưu tập sách phong phú của chúng tôi và tìm những cuốn sách yêu thích</p>
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-book-open me-1"></i>Khám phá ngay
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
