@model HomePageViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Image Slider Section -->
@if (Model.Sliders.Any())
{
    <div id="heroCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Sliders.Count; i++)
            {
                <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="@i"
                        class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")"
                        aria-label="Slide @(i + 1)"></button>
            }
        </div>
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Sliders.Count; i++)
            {
                var slider = Model.Sliders[i];
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="position-relative">
                        <img src="@slider.ImageUrl" class="d-block w-100" alt="@slider.Title" style="height: 400px; object-fit: cover;">
                        <div class="carousel-caption d-none d-md-block">
                            <div class="bg-dark bg-opacity-75 p-4 rounded">
                                <h2 class="text-white">@slider.Title</h2>
                                @if (!string.IsNullOrEmpty(slider.Description))
                                {
                                    <p class="text-white-50">@slider.Description</p>
                                }
                                @if (!string.IsNullOrEmpty(slider.ButtonText) && !string.IsNullOrEmpty(slider.LinkUrl))
                                {
                                    <a href="@slider.LinkUrl" class="btn btn-@slider.ButtonStyle btn-lg">
                                        @slider.ButtonText
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}
else
{
    <!-- Default Hero Section if no sliders -->
    <div class="hero-section rounded text-center mb-5 py-5">
        <h1 class="display-4 fw-bold text-black">
            <i class="fas fa-book me-3"></i>
            Chào mừng đến với BookStore
        </h1>
        <p class="lead text-secondary">Khám phá thế giới tri thức với hàng ngàn đầu sách chất lượng</p>
        <hr class="my-4">
        <p class="text-muted">Tìm kiếm và mua sách yêu thích của bạn một cách dễ dàng</p>
        @if (Model.IsLoggedIn)
        {
            <div class="mb-0">
                <p class="mb-2">
                    <i class="fas fa-user me-2"></i>
                    Xin chào, <strong>@Model.UserFullName</strong>!
                </p>
                @if (Model.IsAdmin)
                {
                    <p class="mb-0">
                        <span class="badge bg-warning text-dark">
                            <i class="fas fa-crown me-1"></i>Administrator
                        </span>
                        - Bạn có quyền truy cập đầy đủ hệ thống
                    </p>
                }
                else
                {
                    <p class="mb-0">
                        <span class="badge bg-info">
                            <i class="fas fa-user me-1"></i>User
                        </span>
                        - Liên hệ Admin để được cấp quyền truy cập
                    </p>
                }
            </div>
        }
        else
        {
            <div class="mt-3">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-2">
                    <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-user-plus me-1"></i>Đăng ký
                </a>
            </div>
        }
    </div>
}

<div class="container">
    <!-- Promotional Banners Section -->
    @if (Model.PromotionalBanners.Any())
    {
        <div class="row mb-5">
            @foreach (var banner in Model.PromotionalBanners)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    @if (!string.IsNullOrEmpty(banner.LinkUrl))
                    {
                        <a href="@banner.LinkUrl" class="text-decoration-none">
                            <div class="card border-0 shadow-sm h-100">
                                <img src="@banner.ImageUrl" class="card-img-top" alt="@banner.Title" style="height: 200px; object-fit: cover;">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-dark">@banner.Title</h5>
                                    @if (!string.IsNullOrEmpty(banner.Description))
                                    {
                                        <p class="card-text text-muted flex-grow-1">@banner.Description</p>
                                    }
                                    @if (!string.IsNullOrEmpty(banner.ButtonText))
                                    {
                                        <div class="mt-auto">
                                            <span class="btn btn-@banner.ButtonStyle btn-sm">@banner.ButtonText</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </a>
                    }
                    else
                    {
                        <div class="card border-0 shadow-sm h-100">
                            <img src="@banner.ImageUrl" class="card-img-top" alt="@banner.Title" style="height: 200px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-dark">@banner.Title</h5>
                                @if (!string.IsNullOrEmpty(banner.Description))
                                {
                                    <p class="card-text text-muted flex-grow-1">@banner.Description</p>
                                }
                                @if (!string.IsNullOrEmpty(banner.ButtonText))
                                {
                                    <div class="mt-auto">
                                        <span class="btn btn-@banner.ButtonStyle btn-sm">@banner.ButtonText</span>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }

    <!-- Categories Section -->
    @if (Model.Categories.Any())
    {
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="text-center mb-4">
                    <i class="fas fa-list me-2"></i>Danh mục sách
                </h2>
                <div class="row">
                    @foreach (var category in Model.Categories)
                    {
                        <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-3">
                            <a href="@Url.Action("Index", "Shop", new { categoryId = category.Id })"
                               class="text-decoration-none">
                                <div class="card border-0 shadow-sm text-center h-100 category-card">
                                    <div class="card-body d-flex flex-column justify-content-center">
                                        <i class="fas fa-book fa-2x text-primary mb-2"></i>
                                        <h6 class="card-title text-dark mb-0">@category.Name</h6>
                                        <small class="text-muted">@category.BookCount sách</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Best Sellers Section -->
    @if (Model.BestSellerBooks.Any())
    {
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="text-center mb-4">
                    <i class="fas fa-star me-2"></i>Sách bán chạy
                </h2>

                <!-- Best Seller Books Grid -->
                <div class="row books-grid-4">
                    @if (Model.BestSellerBooks != null && Model.BestSellerBooks.Any())
                    {
                        @foreach (var book in Model.BestSellerBooks)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 col-6 book-grid-item">
                                <div class="book-card-wrapper">
                                    <div class="card book-card h-100 shadow-sm">
                                        <!-- Book Image -->
                                        <div class="book-image-container position-relative">
                                            <img src="@(string.IsNullOrEmpty(book.ImageUrl) ? "/images/no-image.jpg" : book.ImageUrl)"
                                                 alt="@book.Title"
                                                 class="card-img-top book-image">

                                            <!-- Stock Badge -->
                                            @if (book.Quantity > 0)
                                            {
                                                @if (book.Quantity <= 5)
                                                {
                                                    <span class="badge bg-warning stock-badge position-absolute top-0 end-0 m-2">
                                                        Sắp hết
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger stock-badge position-absolute top-0 end-0 m-2">
                                                    Hết hàng
                                                </span>
                                            }
                                        </div>

                                        <!-- Book Info -->
                                        <div class="card-body book-info d-flex flex-column">
                                            <h6 class="card-title book-title">@book.Title</h6>
                                            <p class="card-text book-author text-muted small mb-1">
                                                <i class="fas fa-user me-1"></i>@book.AuthorName
                                            </p>
                                            <p class="card-text book-category text-muted small mb-2">
                                                <i class="fas fa-tag me-1"></i>@book.CategoryName
                                            </p>

                                            <div class="mt-auto">
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <span class="book-price text-danger fw-bold">@book.Price.ToString("N0") VND</span>
                                                </div>

                                                @if (book.Quantity > 0)
                                                {
                                                    <button class="btn btn-primary btn-sm w-100 add-to-cart-btn"
                                                            onclick="addToCart(@book.Id)">
                                                        <i class="fas fa-cart-plus me-1"></i>
                                                        <span class="btn-text">Thêm vào giỏ</span>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-secondary btn-sm w-100" disabled>
                                                        <i class="fas fa-times me-1"></i>Hết hàng
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="text-center py-3">
                                <p class="text-muted">Chưa có sách bán chạy nào</p>
                            </div>
                        </div>
                    }
                </div>

                <div class="text-center mt-4">
                    <a href="@Url.Action("Index", "Shop")" class="btn btn-primary btn-lg">
                        <i class="fas fa-shopping-cart me-2"></i>Xem tất cả sách
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="row section-spacing">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-rocket me-2"></i>Khám phá ngay
            </h2>
        </div>
        <div class="col-lg-4 col-md-6 card-spacing">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center mx-auto mb-3"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-store fa-2x text-white"></i>
                    </div>
                    <h5 class="card-title">Cửa hàng sách</h5>
                    <p class="card-text">Khám phá hàng ngàn đầu sách từ nhiều thể loại khác nhau</p>
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary w-100">
                        <i class="fas fa-shopping-bag me-1"></i>Mua sắm ngay
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 card-spacing">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="rounded-circle bg-success d-flex align-items-center justify-content-center mx-auto mb-3"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-search fa-2x text-white"></i>
                    </div>
                    <h5 class="card-title">Tìm kiếm sách</h5>
                    <p class="card-text">Tìm kiếm sách theo tên, tác giả hoặc thể loại yêu thích</p>
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-success w-100">
                        <i class="fas fa-search me-1"></i>Tìm kiếm
                    </a>
                </div>
            </div>
        </div>
        @if (Context.Session.GetString("Token") != null && Context.Session.GetString("IsAdmin") != "True")
        {
            <div class="col-lg-4 col-md-6 card-spacing">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <div class="rounded-circle bg-info d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-user fa-2x text-white"></i>
                        </div>
                        <h5 class="card-title">Tài khoản của tôi</h5>
                        <p class="card-text">Quản lý thông tin cá nhân và lịch sử mua hàng</p>
                        <a asp-controller="User" asp-action="Dashboard" class="btn btn-info w-100">
                            <i class="fas fa-tachometer-alt me-1"></i>Trang cá nhân
                        </a>
                    </div>
                </div>
            </div>
        }
        else if (Context.Session.GetString("Token") == null)
        {
            <div class="col-lg-4 col-md-6 card-spacing">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center">
                        <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-user-plus fa-2x text-white"></i>
                        </div>
                        <h5 class="card-title">Tạo tài khoản</h5>
                        <p class="card-text">Đăng ký tài khoản để trải nghiệm đầy đủ tính năng</p>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-warning w-100">
                            <i class="fas fa-user-plus me-1"></i>Đăng ký ngay
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Features -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-star me-2"></i>Tính năng nổi bật
            </h2>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-search text-primary me-2"></i>Tìm kiếm thông minh
                    </h5>
                    <p class="card-text">Tìm kiếm sách theo tên, tác giả, ISBN hoặc thể loại một cách nhanh chóng và chính xác.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-mobile-alt text-success me-2"></i>Giao diện responsive
                    </h5>
                    <p class="card-text">Thiết kế thân thiện với mọi thiết bị, từ máy tính để bàn đến điện thoại di động.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-shield-alt text-warning me-2"></i>Bảo mật cao
                    </h5>
                    <p class="card-text">Hệ thống bảo mật đa lớp đảm bảo an toàn cho dữ liệu và thông tin người dùng.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-shipping-fast text-info me-2"></i>Giao hàng nhanh chóng
                    </h5>
                    <p class="card-text">Giao hàng toàn quốc với nhiều hình thức thanh toán tiện lợi và an toàn.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row">
        <div class="col-12">
            <div class="card bg-light border-0">
                <div class="card-body text-center">
                    <h5 class="card-title">
                        <i class="fas fa-heart me-2"></i>Bắt đầu hành trình đọc sách
                    </h5>
                    <p class="card-text">Hãy khám phá bộ sưu tập sách phong phú của chúng tôi và tìm những cuốn sách yêu thích</p>
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-book-open me-1"></i>Khám phá ngay
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .category-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

        .book-card {
            transition: all 0.3s ease;
        }

        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

        .carousel-item img {
            border-radius: 0.375rem;
        }

        .carousel-caption {
            bottom: 2rem;
        }

        .hero-section {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 4rem 2rem;
            border: 1px solid #dee2e6;
        }

        .card {
            transition: box-shadow 0.2s ease-in-out;
        }

        .card:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 5%;
        }

        .carousel-indicators {
            bottom: 1rem;
        }

        .carousel-indicators button {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }
    </style>
}
