@using BookStore.Core.Entities
@model VouchersViewModel
@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-tags me-2 text-primary"></i>@Model.PageTitle
                </h2>
                
                <!-- Navigation tabs -->
                <div class="btn-group" role="group">
                    <a href="@Url.Action("Available")" class="btn @(Model.ShowAvailable ? "btn-primary" : "btn-outline-primary")">
                        <i class="fas fa-gift me-1"></i>Voucher có thể dùng
                    </a>
                    <a href="@Url.Action("MyVouchers")" class="btn @(Model.ShowMyVouchers ? "btn-primary" : "btn-outline-primary")">
                        <i class="fas fa-history me-1"></i>Voucher của tôi
                    </a>
                </div>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Available Vouchers -->
            @if (Model.ShowAvailable)
            {
                <div class="row">
                    @if (Model.AvailableVouchers.Any())
                    {
                        @foreach (var voucher in Model.AvailableVouchers)
                        {
                            <div class="col-lg-6 col-xl-4 mb-4">
                                <div class="card voucher-card h-100 border-0 shadow-sm">
                                    <div class="card-header bg-gradient-primary text-white">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0 fw-bold">@voucher.Name</h6>
                                            <span class="badge bg-light text-dark">@voucher.Type</span>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="voucher-code-section mb-3">
                                            <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                                <code class="text-primary fw-bold fs-5">@voucher.Code</code>
                                                <button class="btn btn-sm btn-outline-primary" onclick="copyVoucherCode('@voucher.Code')">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                        </div>

                                        <p class="text-muted small mb-3">@voucher.Description</p>

                                        <div class="voucher-details">
                                            <div class="row text-center mb-3">
                                                <div class="col-6">
                                                    <div class="border-end">
                                                        <div class="text-primary fw-bold fs-4">
                                                            @if (voucher.Type == VoucherType.Percentage)
                                                            {
                                                                <span>@voucher.Value%</span>
                                                            }
                                                            else if (voucher.Type == VoucherType.FixedAmount)
                                                            {
                                                                <span>@voucher.Value.ToString("N0") VNĐ</span>
                                                            }
                                                            else
                                                            {
                                                                <i class="fas fa-shipping-fast"></i>
                                                            }
                                                        </div>
                                                        <small class="text-muted">Giảm giá</small>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="text-success fw-bold fs-6">
                                                        @if (voucher.MinimumOrderAmount > 0)
                                                        {
                                                            <span>@voucher.MinimumOrderAmount.ToString("N0") VNĐ</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Không giới hạn</span>
                                                        }
                                                    </div>
                                                    <small class="text-muted">Đơn tối thiểu</small>
                                                </div>
                                            </div>

                                            @if (voucher.EndDate != DateTime.MinValue)
                                            {
                                                <div class="text-center mb-2">
                                                    <small class="text-warning">
                                                        <i class="fas fa-clock me-1"></i>
                                                        Hết hạn: @voucher.EndDate.ToString("dd/MM/yyyy HH:mm")
                                                    </small>
                                                </div>
                                            }

                                            @if (voucher.UsageLimit.HasValue)
                                            {
                                                <div class="progress mb-2" style="height: 6px;">
                                                    @{
                                                        var usagePercentage = voucher.UsageLimit.Value > 0 ? (double)voucher.UsedCount / voucher.UsageLimit.Value * 100 : 0;
                                                    }
                                                    <div class="progress-bar bg-warning" style="width: @usagePercentage%"></div>
                                                </div>
                                                <small class="text-muted">
                                                    Đã sử dụng: @voucher.UsedCount/@voucher.UsageLimit.Value
                                                </small>
                                            }
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <div class="d-grid gap-2">
                                            <a href="@Url.Action("Details", new { id = voucher.Id })" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-info-circle me-1"></i>Xem chi tiết
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="text-center py-5">
                                <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Hiện tại không có voucher nào</h5>
                                <p class="text-muted">Hãy quay lại sau để kiểm tra các voucher mới!</p>
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- My Vouchers -->
            @if (Model.ShowMyVouchers)
            {
                <div class="row">
                    @if (Model.MyVouchers.Any())
                    {
                        @foreach (var voucher in Model.MyVouchers)
                        {
                            <div class="col-lg-6 col-xl-4 mb-4">
                                <div class="card voucher-card h-100 border-0 shadow-sm @(voucher.IsActive ? "" : "opacity-75")">
                                    <div class="card-header @(voucher.IsActive ? "bg-gradient-success" : "bg-gradient-secondary") text-white">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0 fw-bold">@voucher.Name</h6>
                                            <span class="badge bg-light text-dark">
                                                @(voucher.IsActive ? "Đã sử dụng" : "Hết hạn")
                                            </span>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="voucher-code-section mb-3">
                                            <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                                <code class="text-muted fw-bold">@voucher.Code</code>
                                            </div>
                                        </div>

                                        <p class="text-muted small mb-3">@voucher.Description</p>

                                        <div class="voucher-details">
                                            <div class="row text-center mb-3">
                                                <div class="col-6">
                                                    <div class="border-end">
                                                        <div class="text-muted fw-bold">
                                                            @if (voucher.Type == VoucherType.Percentage)
                                                            {
                                                                <span>@voucher.Value%</span>
                                                            }
                                                            else if (voucher.Type == VoucherType.FixedAmount)
                                                            {
                                                                <span>@voucher.Value.ToString("N0") VNĐ</span>
                                                            }
                                                            else
                                                            {
                                                                <i class="fas fa-shipping-fast"></i>
                                                            }
                                                        </div>
                                                        <small class="text-muted">Đã giảm</small>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="text-muted fw-bold">
                                                        @if (voucher.EndDate != DateTime.MinValue)
                                                        {
                                                            <span>@voucher.EndDate.ToString("dd/MM/yyyy")</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Không giới hạn</span>
                                                        }
                                                    </div>
                                                    <small class="text-muted">Ngày hết hạn</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="text-center py-5">
                                <i class="fas fa-history fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Bạn chưa sử dụng voucher nào</h5>
                                <p class="text-muted">Hãy khám phá các voucher có sẵn và tiết kiệm chi phí!</p>
                                <a href="@Url.Action("Available")" class="btn btn-primary">
                                    <i class="fas fa-gift me-1"></i>Xem voucher có thể dùng
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyVoucherCode(code) {
            navigator.clipboard.writeText(code).then(function() {
                // Show success message
                const toast = document.createElement('div');
                toast.className = 'toast align-items-center text-white bg-success border-0 position-fixed';
                toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999;';
                toast.innerHTML = `
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="fas fa-check me-2"></i>Đã sao chép mã voucher: ${code}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                `;
                document.body.appendChild(toast);
                
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();
                
                // Remove toast after it's hidden
                toast.addEventListener('hidden.bs.toast', function() {
                    document.body.removeChild(toast);
                });
            }).catch(function(err) {
                console.error('Could not copy text: ', err);
                alert('Không thể sao chép mã voucher. Vui lòng sao chép thủ công: ' + code);
            });
        }
    </script>
}

<style>
    .voucher-card {
        transition: transform 0.2s ease-in-out;
    }
    
    .voucher-card:hover {
        transform: translateY(-2px);
    }
    
    .bg-gradient-primary {
        background: linear-gradient(45deg, #007bff, #0056b3);
    }
    
    .bg-gradient-success {
        background: linear-gradient(45deg, #28a745, #1e7e34);
    }
    
    .bg-gradient-secondary {
        background: linear-gradient(45deg, #6c757d, #495057);
    }
</style>
