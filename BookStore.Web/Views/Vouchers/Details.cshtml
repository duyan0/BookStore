@using BookStore.Core.Entities
@model VoucherDto
@{
    ViewData["Title"] = "Chi tiết voucher - " + Model.Name;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Available", "Vouchers")">Voucher</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </nav>

            <!-- Voucher Details Card -->
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h3 class="mb-2 fw-bold">@Model.Name</h3>
                    <p class="mb-0 opacity-75">@Model.Description</p>
                </div>

                <div class="card-body p-4">
                    <!-- Voucher Code Section -->
                    <div class="text-center mb-4">
                        <div class="voucher-code-display p-3 bg-light rounded-3 border-2 border-dashed border-primary">
                            <label class="form-label text-muted small mb-2">MÃ VOUCHER</label>
                            <div class="d-flex justify-content-center align-items-center">
                                <code class="text-primary fw-bold fs-2 me-3">@Model.Code</code>
                                <button class="btn btn-outline-primary" onclick="copyVoucherCode('@Model.Code')">
                                    <i class="fas fa-copy me-1"></i>Sao chép
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Voucher Information -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <div class="info-card h-100 p-3 bg-light rounded">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-percentage text-primary me-2"></i>
                                    <h6 class="mb-0">Loại giảm giá</h6>
                                </div>
                                <div class="text-center">
                                    @if (Model.Type == VoucherType.Percentage)
                                    {
                                        <div class="display-6 text-primary fw-bold">@Model.Value%</div>
                                        <small class="text-muted">Giảm theo phần trăm</small>
                                    }
                                    else if (Model.Type == VoucherType.FixedAmount)
                                    {
                                        <div class="display-6 text-primary fw-bold">@Model.Value.ToString("N0")</div>
                                        <small class="text-muted">VNĐ giảm cố định</small>
                                    }
                                    else
                                    {
                                        <div class="display-6 text-primary">
                                            <i class="fas fa-shipping-fast"></i>
                                        </div>
                                        <small class="text-muted">Miễn phí vận chuyển</small>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="info-card h-100 p-3 bg-light rounded">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-shopping-cart text-success me-2"></i>
                                    <h6 class="mb-0">Đơn hàng tối thiểu</h6>
                                </div>
                                <div class="text-center">
                                    @if (Model.MinimumOrderAmount > 0)
                                    {
                                        <div class="display-6 text-success fw-bold">@Model.MinimumOrderAmount.ToString("N0")</div>
                                        <small class="text-muted">VNĐ</small>
                                    }
                                    else
                                    {
                                        <div class="display-6 text-success fw-bold">
                                            <i class="fas fa-infinity"></i>
                                        </div>
                                        <small class="text-muted">Không giới hạn</small>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Information -->
                    <div class="row mb-4">
                        @if (Model.MaximumDiscountAmount.HasValue && Model.MaximumDiscountAmount > 0)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-hand-holding-usd text-warning me-2"></i>
                                    <div>
                                        <strong>Giảm tối đa:</strong>
                                        <span class="text-warning fw-bold">@Model.MaximumDiscountAmount.Value.ToString("N0") VNĐ</span>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.UsageLimit.HasValue)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-users text-info me-2"></i>
                                    <div>
                                        <strong>Số lượng:</strong>
                                        <span class="text-info">@Model.UsedCount/@Model.UsageLimit.Value</span>
                                    </div>
                                </div>
                                @if (Model.UsageLimit.Value > 0)
                                {
                                    <div class="progress mt-2" style="height: 8px;">
                                        @{
                                            var usagePercentage = (double)Model.UsedCount / Model.UsageLimit.Value * 100;
                                        }
                                        <div class="progress-bar bg-info" style="width: @usagePercentage%"></div>
                                    </div>
                                }
                            </div>
                        }

                        @if (Model.UsageLimitPerUser.HasValue)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user text-secondary me-2"></i>
                                    <div>
                                        <strong>Giới hạn mỗi người:</strong>
                                        <span class="text-secondary">@Model.UsageLimitPerUser.Value lần</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Time Information -->
                    <div class="row mb-4">
                        @if (Model.StartDate != DateTime.MinValue)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-play-circle text-success me-2"></i>
                                    <div>
                                        <strong>Bắt đầu:</strong>
                                        <span>@Model.StartDate.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (Model.EndDate != DateTime.MinValue)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-stop-circle text-danger me-2"></i>
                                    <div>
                                        <strong>Kết thúc:</strong>
                                        <span class="@(Model.EndDate < DateTime.Now ? "text-danger" : "text-warning")">
                                            @Model.EndDate.ToString("dd/MM/yyyy HH:mm")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Status -->
                    <div class="text-center mb-4">
                        @if (Model.IsActive && (Model.EndDate == DateTime.MinValue || Model.EndDate > DateTime.Now))
                        {
                            <span class="badge bg-success fs-6 px-3 py-2">
                                <i class="fas fa-check-circle me-1"></i>Có thể sử dụng
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-6 px-3 py-2">
                                <i class="fas fa-times-circle me-1"></i>Không khả dụng
                            </span>
                        }
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("Available")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                        </a>
                        @if (Model.IsActive && (Model.EndDate == DateTime.MinValue || Model.EndDate > DateTime.Now))
                        {
                            <a href="@Url.Action("Index", "Shop")" class="btn btn-primary">
                                <i class="fas fa-shopping-cart me-1"></i>Mua sắm ngay
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Usage Instructions -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-info me-2"></i>Hướng dẫn sử dụng
                    </h5>
                </div>
                <div class="card-body">
                    <ol class="mb-0">
                        <li class="mb-2">Thêm sản phẩm vào giỏ hàng và tiến hành thanh toán</li>
                        <li class="mb-2">Tại trang thanh toán, nhập mã voucher <code>@Model.Code</code> vào ô "Mã voucher"</li>
                        <li class="mb-2">Nhấn "Áp dụng" để kiểm tra và áp dụng voucher</li>
                        <li class="mb-0">Hoàn tất đặt hàng để nhận ưu đãi</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyVoucherCode(code) {
            navigator.clipboard.writeText(code).then(function() {
                // Show success message
                const toast = document.createElement('div');
                toast.className = 'toast align-items-center text-white bg-success border-0 position-fixed';
                toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999;';
                toast.innerHTML = `
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="fas fa-check me-2"></i>Đã sao chép mã voucher: ${code}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                `;
                document.body.appendChild(toast);
                
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();
                
                // Remove toast after it's hidden
                toast.addEventListener('hidden.bs.toast', function() {
                    document.body.removeChild(toast);
                });
            }).catch(function(err) {
                console.error('Could not copy text: ', err);
                alert('Không thể sao chép mã voucher. Vui lòng sao chép thủ công: ' + code);
            });
        }
    </script>
}

<style>
    .bg-gradient-primary {
        background: linear-gradient(45deg, #007bff, #0056b3);
    }
    
    .voucher-code-display {
        background: linear-gradient(45deg, #f8f9fa, #e9ecef);
    }
    
    .info-card {
        transition: transform 0.2s ease-in-out;
    }
    
    .info-card:hover {
        transform: translateY(-2px);
    }
</style>
