@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-white text-center py-4">
                    <h2 class="mb-0 fw-bold text-black">
                        <i class="fas fa-key me-2"></i>Quên mật khẩu
                    </h2>
                    <p class="text-muted mt-2 mb-0">Nhập email hoặc tên đăng nhập để nhận mật khẩu mới</p>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form id="forgotPasswordForm" method="post" asp-action="ForgotPassword">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <label for="emailOrUsername" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-2"></i>Email hoặc Tên đăng nhập
                            </label>
                            <input type="text" 
                                   class="form-control form-control-lg border-2" 
                                   id="emailOrUsername" 
                                   name="emailOrUsername" 
                                   placeholder="Nhập email hoặc tên đăng nhập của bạn"
                                   required>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Chúng tôi sẽ gửi mật khẩu mới đến email đã đăng ký của bạn
                            </div>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-dark btn-lg fw-semibold" id="resetBtn">
                                <i class="fas fa-paper-plane me-2"></i>Gửi mật khẩu mới
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                Nhớ mật khẩu rồi? 
                                <a href="@Url.Action("Login", "Account")" class="text-decoration-none fw-semibold">
                                    Đăng nhập ngay
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Security Notice -->
            <div class="card mt-4 border-warning">
                <div class="card-body">
                    <h6 class="card-title text-warning">
                        <i class="fas fa-shield-alt me-2"></i>Lưu ý bảo mật
                    </h6>
                    <ul class="small text-muted mb-0">
                        <li>Mật khẩu mới sẽ được gửi đến email đã đăng ký</li>
                        <li>Vui lòng đổi mật khẩu ngay sau khi đăng nhập</li>
                        <li>Không chia sẻ mật khẩu với bất kỳ ai</li>
                        <li>Kiểm tra thư mục spam nếu không thấy email</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', function(e) {
            const btn = document.getElementById('resetBtn');
            const originalText = btn.innerHTML;
            
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang gửi...';
            
            // Re-enable button after 5 seconds to prevent permanent disable
            setTimeout(function() {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }, 5000);
        });

        // Auto-focus on input field
        document.getElementById('emailOrUsername').focus();
    </script>
}
