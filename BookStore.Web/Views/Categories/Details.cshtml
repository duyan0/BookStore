@model BookStore.Web.Models.CategoryViewModel

@{
    ViewData["Title"] = "Chi tiết thể loại";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách thể loại</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chi tiết thể loại</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fas fa-tag me-2"></i>Thông tin thể loại
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="rounded-circle bg-success d-flex align-items-center justify-content-center mx-auto mb-3" 
                                 style="width: 150px; height: 150px;">
                                <i class="fas fa-tag fa-4x text-white"></i>
                            </div>
                            
                            <h4>@Model.Name</h4>
                            <span class="badge bg-info fs-6">
                                <i class="fas fa-book me-1"></i>@Model.BookCount sách
                            </span>
                        </div>

                        <div class="col-md-8">
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Tên thể loại:</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.Name
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Số lượng sách:</strong>
                                </div>
                                <div class="col-sm-9">
                                    <span class="badge bg-info">@Model.BookCount</span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>Ngày tạo:</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>

                            @if (Model.UpdatedAt.HasValue)
                            {
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <strong>Cập nhật lần cuối:</strong>
                                    </div>
                                    <div class="col-sm-9">
                                        @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <strong>Mô tả:</strong>
                                        <p class="mt-2">@Model.Description</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>Chỉnh sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Xóa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
