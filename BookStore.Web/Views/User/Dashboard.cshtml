@model UserDashboardViewModel
@{
    ViewData["Title"] = "Trang chủ người dùng";
}

<div class="container-fluid">
    <div class="row">
        <!-- Welcome Section -->
        <div class="col-12">
            <div class="jumbotron bg-primary text-white rounded mb-4">
                <div class="container">
                    <h1 class="display-4">
                        <i class="fas fa-user-circle me-3"></i>@Model.WelcomeMessage
                    </h1>
                    <p class="lead">Khám phá thế giới sách cùng BookStore - nơi tri thức không giới hạn!</p>
                    <hr class="my-4">
                    <p>Tìm kiếm, mua sắm và quản lý thông tin cá nhân của bạn một cách dễ dàng.</p>
                    <a class="btn btn-light btn-lg" href="@Url.Action("Index", "Shop")" role="button">
                        <i class="fas fa-shopping-cart me-2"></i>Mua sắm ngay
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Quick Actions -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-edit fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Thông tin cá nhân</h5>
                    <p class="card-text">Cập nhật thông tin tài khoản của bạn</p>
                    <a href="@Url.Action("Profile", "User")" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i>Chỉnh sửa
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-shopping-bag fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Lịch sử đơn hàng</h5>
                    <p class="card-text">Xem các đơn hàng đã mua</p>
                    <a href="@Url.Action("Orders", "User")" class="btn btn-success">
                        <i class="fas fa-history me-1"></i>Xem lịch sử
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-book fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title">Cửa hàng sách</h5>
                    <p class="card-text">Khám phá bộ sưu tập sách đa dạng</p>
                    <a href="@Url.Action("Index", "Shop")" class="btn btn-info">
                        <i class="fas fa-search me-1"></i>Khám phá
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-shopping-cart fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">Giỏ hàng</h5>
                    <p class="card-text">Xem và quản lý giỏ hàng của bạn</p>
                    <a href="@Url.Action("Cart", "Shop")" class="btn btn-warning">
                        <i class="fas fa-shopping-cart me-1"></i>Xem giỏ hàng
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Books Section -->
    @if (Model.RecentBooks.Any())
    {
        <div class="row">
            <div class="col-12">
                <h3 class="mb-4">
                    <i class="fas fa-star me-2 text-warning"></i>Sách nổi bật
                </h3>
            </div>
        </div>

        <div class="row">
            @foreach (var book in Model.RecentBooks)
            {
                <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm book-card">
                        <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title text-truncate" title="@book.Title">@book.Title</h6>
                            <p class="card-text text-muted small">@book.AuthorName</p>
                            <p class="card-text text-primary fw-bold">@book.Price.ToString("N0") VNĐ</p>
                            <div class="mt-auto">
                                <a href="@Url.Action("Details", "Shop", new { id = book.Id })" class="btn btn-sm btn-outline-primary w-100">
                                    <i class="fas fa-eye me-1"></i>Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            <div class="col-12 text-center">
                <a href="@Url.Action("Index", "Shop")" class="btn btn-primary btn-lg">
                    <i class="fas fa-arrow-right me-2"></i>Xem tất cả sách
                </a>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .jumbotron {
            padding: 4rem 2rem;
            margin-bottom: 2rem;
        }
        
        .book-card {
            transition: transform 0.2s ease-in-out;
        }
        
        .book-card:hover {
            transform: translateY(-5px);
        }
        
        .card {
            transition: box-shadow 0.2s ease-in-out;
        }
        
        .card:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }
    </style>
}
