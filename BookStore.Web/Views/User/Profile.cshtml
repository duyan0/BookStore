@model UserProfileViewModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>Thông tin cá nhân
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Profile" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Username" class="form-label"></label>
                                    <input asp-for="Username" class="form-control" readonly />
                                    <div class="form-text">Tên đăng nhập không thể thay đổi</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" readonly />
                                    <div class="form-text">Email không thể thay đổi</div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label"></label>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Họ và tên</label>
                                    <input value="@Model.FullName" class="form-control" readonly />
                                    <div class="form-text">Được tạo tự động từ Họ và Tên</div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Dashboard", "User")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Cập nhật thông tin
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Account Info Card -->
            <div class="card shadow mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin tài khoản
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>ID tài khoản:</strong> #@Model.Id</p>
                            <p><strong>Tên đăng nhập:</strong> @Model.Username</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Họ và tên:</strong> @Model.FullName</p>
                            <p><strong>Số điện thoại:</strong> @(!string.IsNullOrEmpty(Model.Phone) ? Model.Phone : "Chưa cập nhật")</p>
                            <p><strong>Địa chỉ:</strong> @(!string.IsNullOrEmpty(Model.Address) ? Model.Address : "Chưa cập nhật")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow mt-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Thao tác nhanh
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <a href="@Url.Action("Orders", "User")" class="btn btn-outline-primary w-100">
                                <i class="fas fa-history me-1"></i>Lịch sử đơn hàng
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a href="@Url.Action("Index", "Shop")" class="btn btn-outline-success w-100">
                                <i class="fas fa-shopping-bag me-1"></i>Mua sắm
                            </a>
                        </div>
                        <div class="col-md-4 mb-2">
                            <a href="@Url.Action("Cart", "Shop")" class="btn btn-outline-warning w-100">
                                <i class="fas fa-shopping-cart me-1"></i>Giỏ hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
