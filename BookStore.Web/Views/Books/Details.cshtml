@model BookStore.Web.Models.BookViewModel

@{
    ViewData["Title"] = "Chi tiết sách";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách sách</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chi tiết sách</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title" style="max-height: 400px;">
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height: 300px;">
                            <i class="fas fa-book fa-5x text-muted"></i>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">@Model.Title</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Tác giả:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model.AuthorName
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Thể loại:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span class="badge bg-secondary">@Model.CategoryName</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Giá:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span class="h4 text-primary">@Model.Price.ToString("C0")</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Số lượng:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span class="badge @(Model.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                                @Model.StockQuantity
                            </span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ISBN))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>ISBN:</strong>
                            </div>
                            <div class="col-sm-9">
                                @Model.ISBN
                            </div>
                        </div>
                    }

                    @if (Model.PublishedDate.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>Ngày xuất bản:</strong>
                            </div>
                            <div class="col-sm-9">
                                @Model.PublishedDate.Value.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Ngày tạo:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </div>
                    </div>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>Cập nhật lần cuối:</strong>
                            </div>
                            <div class="col-sm-9">
                                @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <strong>Mô tả:</strong>
                                <p class="mt-2">@Model.Description</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>Chỉnh sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Xóa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
