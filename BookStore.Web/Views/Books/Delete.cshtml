@model BookStore.Web.Models.BookViewModel

@{
    ViewData["Title"] = "Xóa sách";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách sách</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Xóa</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa sách
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning me-2"></i>
                        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa sách này? Hành động này không thể hoàn tác.
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title" style="max-height: 300px;">
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height: 200px;">
                                    <i class="fas fa-book fa-4x text-muted"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.Title</h4>
                            
                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Tác giả:</strong></div>
                                <div class="col-sm-8">@Model.AuthorName</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Thể loại:</strong></div>
                                <div class="col-sm-8">@Model.CategoryName</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Giá:</strong></div>
                                <div class="col-sm-8">@Model.Price.ToString("C0")</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Số lượng:</strong></div>
                                <div class="col-sm-8">@Model.StockQuantity</div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ISBN))
                            {
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>ISBN:</strong></div>
                                    <div class="col-sm-8">@Model.ISBN</div>
                                </div>
                            }

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Ngày tạo:</strong></div>
                                <div class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>Mô tả:</strong></div>
                                    <div class="col-sm-8">
                                        @(Model.Description.Length > 150 ? Model.Description.Substring(0, 150) + "..." : Model.Description)
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input asp-for="Id" type="hidden" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                            <div>
                                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-list me-1"></i>Danh sách sách
                                </a>
                                <button type="submit" class="btn btn-danger" 
                                        onclick="return confirm('Bạn có chắc chắn muốn xóa sách này?')">
                                    <i class="fas fa-trash me-1"></i>Xác nhận xóa
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
