@model IEnumerable<BookStore.Web.Models.AuthorViewModel>

@{
    ViewData["Title"] = "Danh sách tác giả";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-user-edit me-2"></i>Danh sách tác giả
                </h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Thêm tác giả mới
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var author in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <div class="text-center mb-3">
                                        @if (!string.IsNullOrEmpty(author.ImageUrl))
                                        {
                                            <img src="@author.ImageUrl" class="rounded-circle" alt="@author.FullName" 
                                                 style="width: 80px; height: 80px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center mx-auto" 
                                                 style="width: 80px; height: 80px;">
                                                <i class="fas fa-user fa-2x text-white"></i>
                                            </div>
                                        }
                                    </div>
                                    
                                    <h5 class="card-title text-center">@author.FullName</h5>
                                    
                                    <div class="text-center mb-3">
                                        <span class="badge bg-info">
                                            <i class="fas fa-book me-1"></i>@author.BookCount sách
                                        </span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(author.Biography))
                                    {
                                        <p class="card-text flex-grow-1">
                                            @(author.Biography.Length > 120 ? author.Biography.Substring(0, 120) + "..." : author.Biography)
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="card-text text-muted flex-grow-1">Chưa có thông tin tiểu sử</p>
                                    }

                                    <div class="mt-auto">
                                        <small class="text-muted d-block mb-2">
                                            <i class="fas fa-calendar me-1"></i>
                                            Tạo: @author.CreatedAt.ToString("dd/MM/yyyy")
                                        </small>
                                        
                                        <div class="btn-group w-100" role="group">
                                            <a asp-action="Details" asp-route-id="@author.Id" 
                                               class="btn btn-outline-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@author.Id" 
                                               class="btn btn-outline-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@author.Id" 
                                               class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-edit fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Chưa có tác giả nào</h4>
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="fas fa-plus me-1"></i>Thêm tác giả đầu tiên
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
