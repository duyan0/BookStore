@model BookStore.Web.Models.AuthorViewModel

@{
    ViewData["Title"] = "Xóa tác giả";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách tác giả</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.FullName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Xóa</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa tác giả
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning me-2"></i>
                        <strong>Cảnh báo!</strong> Bạn có chắc chắn muốn xóa tác giả này? 
                        @if (Model.BookCount > 0)
                        {
                            @:<br /><strong>Lưu ý:</strong> Tác giả này có @Model.BookCount sách. Việc xóa có thể ảnh hưởng đến dữ liệu sách.<br>
                        }
                        Hành động này không thể hoàn tác.
                    </div>

                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="rounded-circle mb-3" alt="@Model.FullName" 
                                 style="width: 120px; height: 120px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center mx-auto mb-3" 
                                 style="width: 120px; height: 120px;">
                                <i class="fas fa-user fa-3x text-white"></i>
                            </div>
                        }
                        
                        <h4>@Model.FullName</h4>
                        <span class="badge bg-info fs-6">
                            <i class="fas fa-book me-1"></i>@Model.BookCount sách
                        </span>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4"><strong>Tên:</strong></div>
                        <div class="col-sm-8">@Model.FirstName</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4"><strong>Họ:</strong></div>
                        <div class="col-sm-8">@Model.LastName</div>
                    </div>

                    @if (Model.BirthDate.HasValue)
                    {
                        <div class="row mb-2">
                            <div class="col-sm-4"><strong>Ngày sinh:</strong></div>
                            <div class="col-sm-8">@Model.BirthDate.Value.ToString("dd/MM/yyyy")</div>
                        </div>
                    }

                    <div class="row mb-2">
                        <div class="col-sm-4"><strong>Ngày tạo:</strong></div>
                        <div class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Biography))
                    {
                        <div class="row mb-2">
                            <div class="col-sm-4"><strong>Tiểu sử:</strong></div>
                            <div class="col-sm-8">
                                @(Model.Biography.Length > 100 ? Model.Biography.Substring(0, 100) + "..." : Model.Biography)
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input asp-for="Id" type="hidden" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                            <div>
                                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-list me-1"></i>Danh sách tác giả
                                </a>
                                <button type="submit" class="btn btn-danger" 
                                        onclick="return confirm('Bạn có chắc chắn muốn xóa tác giả này?')">
                                    <i class="fas fa-trash me-1"></i>Xác nhận xóa
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
